/**app.wxss**/

view{
  box-sizing: border-box;
  width:100%;
  font-size:26rpx;
}
image{
  width:100%;
  display: block;
}
.sm-tx{
  font-size: 24rpx;
}
.lg-tx{
  font-size: 28rpx;
}
.bg-white{
  background: #fff;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
}
.lb-width{
  width:95%;
}
.display-flex{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.common-color{
  color:#d00912;
}
.common-bg{
  background-color: #d00912;
}
.line-limit{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.lines-limit{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.grey-color{
  color:#666;
}
.icon-cate{
  position:absolute;
  width:120rpx;
  height:120rpx;
  left:0;
  top:0;
  z-index:999;
}
.no-margin{
  margin-right:0 !important;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.bottom-nav{
  position:fixed;
  height:100rpx;
  bottom:0;
  left:0;
  background:#d00912;
  text-align:center;
  
  color:#fff;
  line-height:100rpx;
}